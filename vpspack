}
function config(){
clear
if [[ $1 == "" ]]
then
echo -e "\033[1;37m      ===VpsPack Argento v. $vpspackversion ===   \033[0m"
echo -e "[\033[1;31m-\033[1;33m]\033[1;30m :::::::::::::::::::::::::::::::::::::::\033[1;33m"
echo -e "\033[1;37m ‚óè Linux Dist:	$distribution ‚Ä∫ Version: $os_version\033[0m"
echo -e "\033[1;37m ‚óè IP VPS:       $ip \033[0m"
echo -e "[\033[1;31m-\033[1;33m]\033[1;30m :::::::::::::::::::::::::::::::::::::::\033[1;33m"
echo -e "\033[1;37m       VpsPack Argento v. $vpspackversion üõ†Ô∏è CONFIGURACIONES üõ†Ô∏è \033[0m"
echo -e "[\033[1;31m-\033[1;33m]\033[1;31m :::::::::::::::::::::::::::::::::::::::\033[1;33m"
echo -e "\033[1;37mSeleccione una opcion:            \033[1;33m
[\033[1;30m1\033[1;33m] SSH                 ‚Ü£\033[1;32m$xssh \033[1;33m
[\033[1;30m2\033[1;33m] DROPBEAR            ‚Ü£\033[1;32m$xdropbear\033[1;33m
[\033[1;30m3\033[1;33m] STUNNEL4            ‚Ü£\033[1;32m$xstunnel \033[1;33m
[\033[1;30m4\033[1;33m] SQUID               ‚Ü£\033[1;32m$xsquid \033[1;33m
[\033[1;30m0\033[1;33m]‚Ü´ REGRESAR                 \033[1;33m"
read -p ": " opcao
else
opcao=$1
fi
case $opcao in
1)
configssh;;
2)
configdropbear;;
3)
configstunnel;;
4)
configsquid;;
0)
vpspack;;
esac
}
function configssh(){
echo -e "[\033[1;31m-\033[1;33m]\033[1;30m =======================================\033[1;33m"
echo -e "\033[1;37m ‚Ä∫ Configuracion SSH\033[0m"
cat /etc/ssh/sshd_config
echo -e "[\033[1;31m-\033[1;33m]\033[1;30m =======================================\033[1;33m"
}
