function encender(){
clear
if [[ $1 == "" ]]
then
echo -e "\033[1;37m     ==‚ïê VpsPack Argento v. $vpspackversion ‚ïê==\033[0m"
echo -e "[\033[1;31m-\033[1;33m]\033[1;30m :::::::::::::::::::::::::::::::::::::::\033[1;33m"
