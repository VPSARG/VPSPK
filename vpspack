echo -e "\033[1;37m       VpsPack Argento $vpspackversion ‚ùå DESINSTALADOR ‚ùå \033[0m"
echo -e "[\033[1;31m-\033[1;33m]\033[1;31m :::::::::::::::::::::::::::::::::::::::\033[1;33m"
