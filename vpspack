echo -e "\033[1;37mSeleccione una opcion:    \033[1;33m
[\033[1;30m1\033[1;33m]‚Üª SSH \033[1;30m(Inicia OpenSSH [\033[1;31mRIESGO\033[1;30m])\033[1;33m
[\033[1;30m2\033[1;33m]‚Üª DROPBEAR \033[1;30m(Inicia Dropbear)\033[1;33m
[\033[1;30m3\033[1;33m]‚Üª SQUID \033[1;30m(Inicia Squid)\033[1;33m
[\033[1;30m5\033[1;33m]‚Üª SSL \033[1;30m(Inicia SSL)\033[1;33m
[\033[1;30m0\033[1;33m]‚Ü´ REGRESAR                 \033[1;33m"
read -p ": " opcao
else
opcao=$1
fi
case $opcao in
1)
encenderssh;;
2)
encenderdropbear;;
3)
encendersquid;;
4)
encenderssl;;
0)
vpspack;;
esac
}
function encenderssh(){
service ssh start > /dev/null 2> /dev/null
echo "Servicio Iniciado"
sleep 3
vpspack
}
function encenderdropbear(){
service dropbear start > /dev/null 2> /dev/null
echo "Servicio Iniciado"
sleep 3
vpspack
}
function encendersquid(){
service squid start && service squid3 start > /dev/null 2> /dev/null
echo "Servicio Iniciado"
sleep 3
vpspack
}
function encenderssl(){
service stunnel4 start > /dev/null 2> /dev/null
echo "Servicio Iniciado"
sleep 3
vpspack
}
